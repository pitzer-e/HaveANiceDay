<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_monday">


    <!-- This is the dashboard fragment. He hasn't caused any trouble, so I've
         let him hangout so far -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.pitzerhaveanice.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <!--This is the Monday navigation fragment -->
    <fragment
