    <fragment
        android:id="@+id/navigation_wednesday"
        android:name="com.example.pitzerhaveanice.ui.Wednesday.WednesdayFragment"
        android:label="@string/app_name"
        tools:layout="@layout/wednesday_fragment" />

    <!--This is the Thursday navigation fragment -->
    <fragment
        android:id="@+id/navigation_thursday"
        android:name="com.example.pitzerhaveanice.ui.thursday.ThursdayFragment"
        android:label="@string/app_name"
